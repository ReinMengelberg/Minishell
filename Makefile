CC = cc
CFLAGS = -Wall -Werror -Wextra
NAME = minishell
INCLUDES = -I./libft/includes
LIBFT = libft/libft.a

SRCS = ./src/main/main.c

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS) $(LIBFT)
	$(CC) $(CFLAGS) $(OBJS) $(LIBFT) $(INCLUDES) -o $(NAME)

	@echo " ______     ______     __    __     ______     _____     __     __         __         ______    "
	@echo "/\  __ \   /\  == \   /\ \-./  \   /\  __ \   /\  __-.  /\ \   /\ \       /\ \       /\  __ \   "
	@echo "\ \  __ \  \ \  __<   \ \ \-./\ \  \ \  __ \  \ \ \/\ \ \ \ \  \ \ \____  \ \ \____  \ \ \/\ \  "
	@echo " \ \_\ \_\  \ \_\ \_\  \ \_\ \ \_\  \ \_\ \_\  \ \____-  \ \_\  \ \_____\  \ \_____\  \ \_____\ "
	@echo "  \/_/\/_/   \/_/ /_/   \/_/  \/_/   \/_/\/_/   \/____/   \/_/   \/_____/   \/_____/   \/_____/ "
	@echo ""
	@echo "                                                          .+*: .-=                  "
	@echo "                                                         ++ =+#- *                  "
	@echo "                                                        +:  #:  .+                  "
	@echo "               .........                                * :#.   #:                  "
	@echo "           .+%*:       -+                           .-+*#+*.  :#.                   "
	@echo "        :#+.  =:       -+                        .#+.     : *%#.                    "
	@echo "    .=*=.     =:       -+                      :*-             =%=                  "
	@echo "   =-         =:       -+                    -%:  -+          == .#+                "
	@echo "   =-         =:       -+                 .*+.    ..        .#.    *%=              "
	@echo "   =-         =:       -+              .=*:                .*.  .++. :*.            "
	@echo "   =-         =:       -+             .#.                 .%.:*#.     .%:           "
	@echo "   =-         =:       -+               :-=+===-::.:#.    -*.      .**. #:          "
	@echo "   :++++=-:   =:       -+                           ==    :#  .-+*=.     #. -=-     "
	@echo "         .+.-+#%%%%%@%%%=                           +-     =#:        .=#++.+ +     "
	@echo "   -*======================*                      :%%.  +   +:    -*#=.   *.+ +     "
	@echo "   -=                      *            .::.   .=*:.* .%.   :%=-:.        *+= +     "
	@echo "   -=                      *  :..     =*:. .+%#:.. -=-*    .+*:      .:*#=-@---     "
	@echo "   -=                      * .+ ..:=+#@%*#     ......     += =#===-:..    -%:*:     "
	@echo " ++*#++++++++++++++++++++++%+*#+++++++++*#*++*=:.      .=*.  =+          :*%.@.     "
	@echo " +                                        .+    .-+@**=.     =%%##**#%%*- *#.%      "
	@echo " %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%##%%%%%%%+       +##+=-:   -+          .#+-+      "
	@echo "   -- #.                             == *.       -*.         .@*++=---=+*%*-=-      "
	@echo "   -- #.                             == *.      ==            ==        *-*.*       "
	@echo "   -- #.                             == *.     .*              :#:    .#: * +       "
	@echo "   -- #.                             == *.     :+    :+++++++++++#@@%+:=**#**       "
	@echo "   -- #.                             == *.     :+   +-+.            *- :%. .+       "
	@echo "   -- #.                             == *.     .#   * .-*-*=---------#-.:%+*:       "
	@echo "   -- #.                             == *.     .%.  +: .= +.         -= :#=+        "
	@echo "   -- #.                             == *.  :#+.    +: =- *          :*. *-#        "
	@echo "   -- #.                             == *..*+*:- =#-.  #::=          :* .%.%        "
	@echo "   -- #.                             == *. .#%#*-      @ *:          +::#* #.       "
	@echo "   -- #.                             == *.            :# %          *+.+-% *:       "
	@echo "   -- #.                             == *.            -=:*        :*.=#. *.=-       "
	@echo "   -+-%.                             =+-*.            +=+=     :*%**=.   +=+-       "

$(LIBFT):
	make -C libft

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -f $(OBJS)
	make -C libft clean

fclean: clean
	rm -f $(NAME)
	make -C libft fclean

re: fclean all
